%header
  %h1 Sign In
= form_tag(session_path) do
  %fieldset
    %ol
      %li
        = label_tag :email, "Email or Username"
        = text_field_tag :email, nil, required: true, autofocus: true
      %li
        = label_tag :password
        = password_field_tag :password, nil, required: true
    %p
      = submit_tag 'Sign In'

%p
  No account yet?
  = link_to "Sign up!", signup_path
