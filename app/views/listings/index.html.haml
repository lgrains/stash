%h1= pluralize(@listings.count, "Listing")

- @listings.each do |listing|
  %article
    %header
      %h2
        = link_to(listing.name, listing)
    %p
      %header
        Description:
      = truncate(listing.description, length: 25, separator: " ")
    %p
      %header
        Treated:
        = treated_show_method(listing)
    %table
      %tr
        %th Width:
        %td= "#{listing.width} inches wide"
      %tr
        %th Length
        %td= "#{listing.length} inches long"
      %tr
        %th Price
        %td= number_to_currency(listing.price)
      %tr
        %th Time on site:
        %td= "#{time_ago_in_words(listing.offered_on)}"
