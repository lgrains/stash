= form_for(@fabric) do |f|
  %p
    = f.label :fabric_type
    = f.text_field :fabric_type, autofocus: true

  %p
    = f.label :color
    = f.text_field :color

  %p
    = f.label :pattern
    = f.text_field :pattern

  %p
    = f.label :description
    %br
    = f.text_area :description, cols: 40, rows: 7

  %p
    = f.label :length
    = f.number_field :length

  %p
    = f.label :width
    = f.number_field :width

  %p
    = f.label :price
    = f.number_field :price, step: 0.01

  %p
    = f.label :offered_on
    = f.date_select :offered_on, order: [:month, :day, :year]

  %p
    = f.label :image_file_name
    %br
    = f.text_field :image_file_name

  = f.submit
  |
  = link_to("Cancel", fabrics_path)
