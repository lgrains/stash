%h3
  = "Editing #{@fabric.name}"

= form_for(@fabric) do |f|
  %p
    = f.label :fabric_type
    = f.text_field :fabric_type

  %p
    = f.label :color
    = f.text_field :color

  %p
    = f.label :pattern
    = f.text_field :pattern

  %p
    = f.label :description
    %br
    = f.text_area :description, cols: 40, rows: 7

  %p
    = f.label :length
    = f.number_field :length

  %p
    = f.label :width
    = f.number_field :width

  %p
    = f.label :price
    = f.number_field :price


  = f.submit
