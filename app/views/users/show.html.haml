%article#user
  %header
    = profile_image_for(@user)

    %h1= @user.name
    %h2= @user.username
    %h2= mail_to(@user.email)
    %h3
      Member since
      %p=@user.created_at.strftime("%B %Y")

  %footer
    %nav
      = link_to "Edit Account", edit_user_path(@user), class: "button"
      = link_to "Delete Account", @user,
          method: :delete,
          data: { confirm: "Are you sure?" },
          class:"button"
